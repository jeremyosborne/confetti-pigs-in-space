{
    "compilerOptions": {
        "allowJs": true,
        "baseUrl": ".",
        "downlevelIteration": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "module": "CommonJS",
        "moduleResolution": "node",
        "lib": ["DOM"],
        "outDir": "dist",
        "paths": {
            "*": ["src/*"]
        },
        "resolveJsonModule": true,
        "sourceMap": true,
        "target": "ESNext",
        "useUnknownInCatchVariables": false
    },

    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
